@{
	Layout = "_CleanLayout";
	ViewData["Title"] = "Sign Up";
}



		<h1>Create Account</h1>


		<form method="post" asp-controller="Auth" asp-action="/auth/signup">

			<div class="form-group">
				<label for="firstName">Full Name</label>
				<input placeholder="Your full name"
					   type="text"
					   class="form-control"
					   id="firstName"
					   name="firstName"
					   required />
			</div>

			<div class="form-group">
				<label for="email">Email</label>
				<input placeholder="Your email address"
					   type="email"
					   class="form-control"
					   id="email"
					   name="email"
					   required />
			</div>

			<div class="form-group">
				<label for="password">Password</label>
				<input placeholder="Enter your password"
					   type="password"
					   class="form-control"
					   id="password"
					   name="password"
					   required />
			</div>

			<div class="form-group">
				<label for="confirm-password">Confirm Password</label>
				<input placeholder="Confirm your password"
					   type="password"
					   class="form-control"
					   id="confirm-password"
					   name="password"
					   required />
			</div>

			<div class="form-group">
				<label for="terms">
					<input type="checkbox" id="terms" name="terms" required />
					<span class="custom-checkbox"></span>
					<span>I accept<a class="terms-link" href="#">Terms and Conditions</a></span>
				</label>

			</div>

			<button type="submit" id="sign-up-btn" class="btn btn-blue">Create Account</button>

		</form>

		<div class="login-link">
			<p>Already have an account? <a href="/auth/signin">Login</a></p>
		</div>

