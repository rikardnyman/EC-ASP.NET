@model FileUploadViewModel

@{
	Layout = "_CleanLayout";
	ViewData["Title"] = "File Upload";
}


<div class="surface">
	<div class="center-content">
		<h1>Upload File</h1>
		<form method="post" asp-controller="FileUpload" asp-action="Upload" enctype="multipart/form-data">
			<div class="form-group">
				<label asp-for="File">Select file to upload:</label>
				<input asp-for="File" class="form-control" accept="image/*"  />
				<span asp-validation-for="File"></span>
			</div>
			
				<button type="submit" class="btn btn-primary">Upload Picture</button>
			
		</form>

	</div>
</div>